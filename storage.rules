rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'images' folder
    match /images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
